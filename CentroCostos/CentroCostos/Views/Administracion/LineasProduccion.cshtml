@model CentroCostos.Models.ViewModels.LineasProduccionAdmViewModel
@using CentroCostos.Models

@if (TempData["message"] != null)
{
    <div class="span11">
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["message"]
        </div>
    </div>
}

<div class="span6">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-list-alt"></i>
            <h3>Lineas de producción existentes</h3>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            @if (Model.Lineas.Count == 0)
            {
                <div class="alert alert-info">Aún no existe ninguna linea de producción</div>
            }
            else
            {

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th> Nombre de la Linea </th>
                            <th> # Modelos </th>
                            <th class="td-actions"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Linea linea in Model.Lineas)
                        {
                            <tr>
                                <td>@linea.Nombre_Linea</td>
                                <td> @linea.Modelos_Linea.Count </td>
                                <td class="td-actions">
                                    <a href="javascript:;" class="btn btn-small btn-success"><i class="btn-icon-only icon-ok"> </i></a>
                                    <a href="javascript:;" class="btn btn-danger btn-small"><i class="btn-icon-only icon-remove"> </i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
        </div>
        <!-- /widget-content -->
    </div>
</div>
<div class="span5">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-bookmark"></i>
            <h3>Opciones</h3>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            <div class="shortcuts">
                <a href="@Url.Action("NuevaLinea", "Administracion")" class="shortcut"><i class="shortcut-icon icon-pencil"></i><span class="shortcut-label">Nueva linea</span></a>
                <a href="javascript:;" class="shortcut"><i class="shortcut-icon icon-eraser"></i><span class="shortcut-label">Eliminar todas</span></a>
            </div>
            <!-- /shortcuts -->
        </div>
        <!-- /widget-content -->
    </div>
</div>
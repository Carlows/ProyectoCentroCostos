@model CentroCostos.Models.ViewModels.ModelosLineaViewModel

@Html.Partial("_TempMessage")

<div class="span8 clearmarginleft">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-list-alt"></i>
            <h3>Modelos Linea @Model.Linea.Nombre_Linea</h3>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            @if (Model.Modelos.Count == 0)
            {
                <div class="alert alert-info">Aún no existe ningún modelo</div>
            }
            else
            {

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th> Codigo Modelo </th>
                            <th> Fecha Creación </th>
                            <th> Ultima Modificación </th>
                            <th class="td-actions"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (CentroCostos.Models.Modelo modelo in Model.Modelos)
                        {
                            <tr>
                                <td class="span7">@modelo.Codigo</td>
                                <td class="span2"> @modelo.Fecha_Creacion.ToString("dd/MM/yyyy") </td>
                                <td class="span2"> @modelo.Fecha_Ultima_Modificacion.ToString("dd/MM/yyyy") </td>
                                <td class="td-actions span3">
                                    <a href="@Url.Action("EditarModelo", new { idLinea = @modelo.Linea.Id, id = @modelo.Id })" class="btn btn-small btn-primary"><i class="btn-icon-only icon-search"> </i></a>
                                    <a href="javascript:;" class="btn btn-danger btn-small"><i class="btn-icon-only icon-remove"> </i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
        </div>
        <!-- /widget-content -->
    </div>
</div>
<div class="span4">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-bookmark"></i>
            <h3>Opciones</h3>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            <div class="shortcuts">
                <a href="@Url.Action("NuevoModelo", "Administracion", new { id = @Model.Linea.Id })" class="shortcut"><i class="shortcut-icon icon-pencil"></i><span class="shortcut-label">Nuevo modelo</span></a>
                <a href="@Url.Action("EditarLinea", "Administracion", new { id = @Model.Linea.Id })" class="shortcut"><i class="shortcut-icon icon-pencil"></i><span class="shortcut-label">Editar linea</span></a>
                <a href="javascript:;" class="shortcut"><i class="shortcut-icon icon-eraser"></i><span class="shortcut-label">Importar datos</span></a>
            </div>
            <!-- /shortcuts -->
        </div>
        <!-- /widget-content -->
    </div>
</div>
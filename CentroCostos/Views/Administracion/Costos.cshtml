@model CentroCostos.Models.ViewModels.CostosAdmViewModel
@using CentroCostos.Models.ViewModels
@Html.Partial("_TempMessage")

<div class="span7 clearmarginleft">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-list-alt"></i>
            <h3>Costos</h3>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            @if (Model.Costos.Count == 0)
            {
                <div class="alert alert-info">Aún no existe ningun costo.</div>
            }
            else
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th> Costo </th>
                            <th> Directo </th>
                            <th> Asignado a </th>
                            <th class="td-actions"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (CostoViewModel costo in Model.Costos)
                        {
                            <tr>
                                <td class="span5">@costo.Comentario</td>
                                <td class="span1"><input type="checkbox" disabled @(costo.esCostoDirecto == true ? "checked" : "")  /></td>
                                <td class="span2">@costo.Departamento</td>
                                <td class="td-actions span2">
                                    <a href="@Url.Action("EditarCosto", "Administracion", new { id = @costo.Id })" class="btn btn-small btn-primary"><i class="btn-icon-only icon-search"> </i></a>
                                    <a href="javascript:;" class="btn btn-danger btn-small"><i class="btn-icon-only icon-remove"> </i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
        </div>
        <!-- /widget-content -->
    </div>
</div>
<div class="span5">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-bookmark"></i>
            <h3>Opciones</h3>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            <div class="shortcuts">
                <a href="@Url.Action("NuevoCosto", "Administracion")" class="shortcut"><i class="shortcut-icon icon-pencil"></i><span class="shortcut-label">Agregar Costo</span></a>
                <a href="javascript:;" class="shortcut"><i class="shortcut-icon icon-eraser"></i><span class="shortcut-label">Importar datos</span></a>
            </div>
            <!-- /shortcuts -->
        </div>
        <!-- /widget-content -->
    </div>

</div>

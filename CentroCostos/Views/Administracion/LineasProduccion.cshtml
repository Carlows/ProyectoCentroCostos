@model CentroCostos.Models.ViewModels.LineasProduccionAdmViewModel
@using CentroCostos.Models

@Html.Partial("_TempMessage")

<div class="span8 clearmarginleft">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-list-alt"></i>
            <h3>Lineas de producción existentes</h3>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            @if (Model.Lineas.Count == 0)
            {
                <div class="alert alert-info">Aún no existe ninguna linea de producción</div>
            }
            else
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th> Nombre de la Linea </th>
                            <th> # Modelos </th>
                            <th class="td-actions"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Linea linea in Model.Lineas)
                        {
                            <tr>
                                <td class="span9">@linea.Nombre_Linea</td>
                                <td class="span1"> @linea.Modelos_Linea.Count </td>
                                <td class="td-actions span2">
                                    <a href="@Url.Action("ModelosLinea", "Administracion", new { id = @linea.Id })" class="btn btn-small btn-primary"><i class="btn-icon-only icon-search"> </i></a>
                                    <a href="javascript:;" class="btn btn-danger btn-small"><i class="btn-icon-only icon-remove"> </i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
        </div>
        <!-- /widget-content -->
    </div>
</div>
<div class="span4">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-bookmark"></i>
            <h3>Opciones</h3>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            <div class="shortcuts">
                <a href="@Url.Action("NuevaLinea", "Administracion")" class="shortcut"><i class="shortcut-icon icon-pencil"></i><span class="shortcut-label">Nueva linea</span></a>
                <a href="javascript:;" class="shortcut"><i class="shortcut-icon icon-eraser"></i><span class="shortcut-label">Importar datos</span></a>
            </div>
            <!-- /shortcuts -->
        </div>
        <!-- /widget-content -->
    </div>
</div>
@model CentroCostos.Models.ViewModels.CentrosCostoAdmViewModel
@using CentroCostos.Models
@Html.Partial("_TempMessage")

<div class="span7 clearmarginleft">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-list-alt"></i>
            <h3>Centros de Costo</h3>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            @if (Model.CentrosdeCosto.Count == 0)
            {
                <div class="alert alert-info">Aún no existe ningun Centro de costo.</div>
            }
            else
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th> Código </th>
                            <th> Descripción </th>
                            <th class="td-actions"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (CentroCosto centro in Model.CentrosdeCosto)
                        {
                            <tr>
                                <td class="span5">@centro.Codigo</td>
                                <td class="span2">@centro.Descripcion</td>
                                <td class="td-actions span2">
                                    <a href="@Url.Action("EditarCentro", "Administracion", new { id = @centro.Id })" class="btn btn-small btn-primary"><i class="btn-icon-only icon-search"> </i></a>
                                    <a href="javascript:;" class="btn btn-danger btn-small"><i class="btn-icon-only icon-remove"> </i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
        </div>
        <!-- /widget-content -->
    </div>
</div>
<div class="span5">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-bookmark"></i>
            <h3>Opciones</h3>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            <div class="shortcuts">
                <a href="@Url.Action("NuevoCentro", "Administracion")" class="shortcut"><i class="shortcut-icon icon-pencil"></i><span class="shortcut-label">Agregar Nuevo</span></a>
                <a href="javascript:;" class="shortcut"><i class="shortcut-icon icon-eraser"></i><span class="shortcut-label">Importar datos</span></a>
            </div>
            <!-- /shortcuts -->
        </div>
        <!-- /widget-content -->
    </div>

</div>
